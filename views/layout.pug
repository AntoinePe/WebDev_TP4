doctype html
html(lang='fr')
  head
    meta(charset='UTF-8')
    title= title
    link(rel='stylesheet', href='/assets/css/default.css')
    link(rel='stylesheet', href='/assets/css/style.css')
    link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
  body
    header 
      .header-container
        .logo
          a(href='/accueil')
            img(alt='logo', src='/assets/img/logo.svg')
        nav
          ul 
            if title=="Accueil" 
              li.active     
                a(href='/accueil') Accueil
            else
              li
                a(href='/accueil') Accueil 
            
            if title=="Produits"
              li.active
                a(href='/produits') Produits
            else
              li
                a(href='/produits') Produits 
            
            if title=="Contact"
              li.active
                a(href='/contact') Contact
            else
              li
                a(href='/contact') Contact
            
            li 
              a.shopping-cart(href='/panier' title="Panier")
                span.fa-stack.fa-lg
                  i.fa.fa-circle.fa-stack-2x.fa-inverse
                  i.fa.fa-shopping-cart.fa-stack-1x
                span.count=count
    main
      block content
    
    footer
      p Par Antoine Pelletier et Rémy Bigué
    script(type='text/javascript', src='/assets/js/jquery-3.2.1.min.js')
    script(type='text/javascript', src='/assets/scripts/utils.js')
    script(type='text/javascript', src='/assets/scripts/products.service.js')
    script(type='text/javascript', src='/assets/scripts/shopping-cart.service.js')
    script(type='text/javascript', src='/assets/scripts/shopping-cart.controller.js')
    block scripts


