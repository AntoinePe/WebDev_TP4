extends layout

block content
  article
    h1 Panier
    #shopping-cart-container
      table.table.shopping-cart-table
        thead
          tr
            th
            th Produit
            th Prix unitaire
            th Quantité
            th Prix
        tbody
          if !panier==undefined
            each produit in panier
              button(title='Supprimer')
                i.fa.fa-times
              a(href='./product.html'+produit.productId) produit.name
                | produit.price
              .row
                .col
                    button(title='Retirer', disabled='')
                    i.fa.fa-minus
                .col 1
                .col
                  button(title='Ajouter')
                   i.fa.fa-plus
                   | produit.productPrice*produit.quantity

      p.shopping-cart-total
        | Total: 
        strong#total-amount
      a.btn.pull-right(href='/commande')
        | Commander 
        i.fa.fa-angle-double-right
      button#remove-all-items-button.btn
        i.fa.fa-trash-o
        |   Vider le panier
